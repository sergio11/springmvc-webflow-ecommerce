<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <secured attributes="ROLE_ANONYMOUS" />
    
    <var name="order" class="persistence.models.Order" />
    
    <!-- Check if cart is empty -->
    <decision-state id="checkEmptyCartState">
        <if test="cartService.isEmpty()" then="finishCheckout" else="createOrderState" />
    </decision-state>
    
    <!-- subflow for create order -->
    <subflow-state id="createOrderState" subflow="order">
        <input name="order" value="flowScope.order" type="persistence.models.Order"/>
        <transition on="finishState" to="confirmState" />
    </subflow-state>
    
    <!-- View state for auth user -->
    <view-state id="authState" view="frontend/checkout/auth" model="order">
        <transition on="onSuccess" to="createOrderState" />
    </view-state>
    
    <view-state id="confirmState" view="frontend/checkout/confirm" model="order">
        <transition on="confirm" to="thankCustomerState" />
    </view-state>
    
    <view-state id="thankCustomerState" view="frontend/checkout/thankCustomer" model="order">
        <transition to="finishCheckoutState" />
    </view-state>

    <end-state id="finishCheckoutState" view="externalRedirect:/home"/>
    <end-state id="cancelCheckoutState" view="externalRedirect:/home"/>
    
    <global-transitions>
        <transition on="cancel" to="cancelCheckoutState" />
        <transition on-exception="org.springframework.security.access.AccessDeniedException" to="authState" />
    </global-transitions>
    
</flow>